<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="0012" author="alkruglov" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="products"/>
        </preConditions>

        <addColumn tableName="products">
            <column name="unit_id" type="varchar(20)" defaultValue="kg">
                <constraints nullable="false" foreignKeyName="products_unit_id_units_id"
                             referencedTableName="units" referencedColumnNames="id"/>
            </column>
            <column name="specification" type="varchar(100)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
